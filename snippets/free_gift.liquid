{% assign variant_id = '6978332459042' %}

{% if cart.total_price >= 500000 %}
    
    <script type="text/javascript" src="{{ 'cart.min.js' | asset_url }}" defer="defer">
        console.log("inside add free gift");
    
        $(document).on('cart.requestComplete', function(event, cart) {
            console.log("in cart request complete event"); 
            CartJS.addItem({{ variant_id }});
        });
    
    </script>

    {% else %}
    
    <script type="text/javascript" src="{{ 'cart.min.js' | asset_url }}" defer="defer">
        console.log("inside remove free gift");
    
        $(document).on('cart.requestComplete', function(event, cart) {
            console.log("in cart request complete event"); 
            CartJS.removeItemById({{ variant_id }});
        });
    
    </script>
    
    {% endif %}
